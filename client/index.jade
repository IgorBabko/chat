        // templates
        script#my-message-template(type="text/x-handlebars-template")
            .my-message
                .rect
                img.avatar(src='images/incognito.jpg')
                .media
                    .media-body
                        h4.media-heading.name {{author}}
                            time.posted-date(datetime='{{postedDate}}')
                        div {{{text}}}


        script#message-template(type="text/x-handlebars-template")
            .message
                .rect
                .media
                    .media-body
                        h4.media-heading.name {{author}}
                            time.posted-date(datetime='{{postedDate}}')
                        div {{{text}}}
                img.avatar(src='images/incognito.jpg')

        script#room-template(type="text/x-handlebars-template")
            li(id="{{_id}}", class="list-group-item {{status}}")
                span.label.label-primary.label-pill.pull-xs-right {{peopleCount}}
                | {{name}}

        script#user-template(type="text/x-handlebars-template")
            li.list-group-item(id="{{_id}}") {{name}}
                img.small-avatar(src='images/incognito.jpg')
                .online-indicator

        script#typing-template(type="text/x-handlebars-template")
            span.pull-xs-left.typing
                img(src="images/typing.gif", style="width: 25px")

body
    #enter-chat-modal.modal.fade(role='dialog', aria-labelledby='welcome', aria-hidden='false')
        .modal-dialog(role='document')
            .modal-content.niko
                .modal-header
                    h4#welcome.modal-title Welcome!
                .modal-body
                    ul.nav.nav-tabs
                        li.nav-item.login-item
                            a.nav-link.active(href='#') Log In
                        li.nav-item.signup-item
                            a.nav-link(href='#') Sign Up
                        li.nav-item.guest-item
                            a.nav-link(href='#') Guest
                    .form
                        #login
                            .form-group
                                label.form-control-label(for='usernameOrEmail') Username or Email
                                span.invalid
                                input#usernameOrEmail.form-control(type='text', autofocus)
                            .form-group
                                label.form-control-label(for='pass') Password
                                span.invalid
                                input#pass.form-control(type='password')
                            label.c-input.c-checkbox
                                input(type='checkbox')
                                span.c-indicator
                                | Remember me

                        #signup
                            .form-group
                                label.form-control-label(for='username') Username
                                span.invalid
                                input#name.form-control(type='text')
                            .form-group
                                label.form-control-label(for='email') Email
                                span.invalid
                                input#email.form-control(type='text')
                            .form-group
                                label.form-control-label(for='password') Password
                                span.invalid
                                input#password.form-control(type='password')
                            .form-group
                                label.form-control-label(for='confirm-password') Confirm password
                                span.invalid
                                input#confirm-password.form-control(type='password')
                            .gender
                                label.c-input.c-radio
                                    input#male(name='gender' type='radio', value="male", checked)
                                    span.c-indicator
                                    | Male
                                label.c-input.c-radio
                                    input#female(name='gender', type='radio', value="female")
                                    span.c-indicator
                                    | Female
                            .avatar-block
                                span.btn.btn-default.btn-file
                                    | Upload avatar
                                    input#avatar(type='file')
                                #avatar-circle

                        #guest
                            .form-group
                                label.form-control-label(for='name') Your name:
                                span.invalid
                                input#name.form-control(type='text')
                .modal-footer
                    button#join.btn(type='button') Join

    #create-room-modal.modal.fade(role='dialog', aria-labelledby='createRoom', aria-hidden='false')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#createRoom.modal-title Create room
                .modal-body
                    .form
                        .form-group
                            label.form-control-label(for='name') Name:&nbsp;
                                span.asterisk *
                            span.invalid
                            input#name.form-control(type='text')
                        .form-group
                            label.form-control-label(for='password') Password:
                            span.invalid
                            input#password.form-control(type='password')
                        .form-group
                            label.form-control-label(for='password-confirm') Password again:
                            span.invalid
                            input#password-confirm.form-control(type='password')
                        .form-group
                            label.form-control-label(for='code') Code:&nbsp;
                                span.asterisk *
                            span.invalid
                            input#code.form-control(type='password')
                        .form-group
                            label.form-control-label(for='code-confirm') Code again:&nbsp;
                                span.asterisk *
                            span.invalid
                            input#code-confirm.form-control(type='password')
                .modal-footer
                    .checkbox#join-room-checkbox
                        label
                            input(type='checkbox', value='')
                            | Join newely created room
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button.btn.btn#create(type='button') Create

    //#delete-room-modal.modal.fade(role='dialog', aria-labelledby='deleteRoom', aria-hidden='false')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#deleteRoom.modal-title Delete room
                .modal-body
                    .form-group
